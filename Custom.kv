Basic_UX:

<Basic_UX>:
    Label:
        id: label
        text: TB.state
    ToggleButton:
        id: TB
        size: 200, 100
        pos: 300, 300



<MainInterface>:
    ScreenManager:
        id: sm
        size: root.width, root.height
        Screen:
            name: "background_1"
            Image:
                source: "Background_1.png"
        Screen:
            name: "background_2"
            Image:
                source: "Background_2.png"
        Screen:
            name: "background_3"
            Image:
                source: "Background_3.png"
    Image:
        source: "Top_Bar.png"
        size: 480, 135
        pos: 0, root.height-135
    Button:
        size: 112.5, 75
        pos: root.width/2 - 168.75, root.height-100
        background_color: 1,1,1,0
        on_press: root.S_pressing(S_img, sm)
        on_release: root.S_releasing(S_img)
        Image:
            id: S_img
            source: "Start_Btn.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y
    Button:
        size: 112.5, 75
        pos: root.width/2-56.25, root.height-100
        background_color: 1,1,1,0
        on_press: root.ST_pressing(ST_img, sm)
        on_release: root.ST_releasing(ST_img)
        Image:
            id: ST_img
            source: "Stats_Btn.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y
    Button:
        size: 112.5, 75
        pos: root.width/2+56.25, root.height-100
        background_color: 1,1,1,0
        on_press: root.L_pressing(L_img, sm)
        on_release: root.L_releasing(L_img)
        Image:
            id: L_img
            source: "Likes_Btn.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y